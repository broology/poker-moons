{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "strict": true,
        "paths": {
            "@poker-moons/backend-data-access-state": ["libs/backend/data-access/state/src/index.ts"],
            "@poker-moons/backend/feature/table": ["libs/backend/feature/table/src/index.ts"],
            "@poker-moons/backend/shared/util/validators": ["libs/backend/shared/util/validators/src/index.ts"],
            "@poker-moons/frontend/shared/state/table": ["libs/frontend/shared/state/table/src/index.ts"],
            "@poker-moons/frontend/shared/util/environment": ["libs/frontend/shared/util/environment/src/index.ts"],
            "@poker-moons/frontend/table/shell": ["libs/frontend/table/shell/src/index.ts"],
            "@poker-moons/shared/testing": ["libs/shared/testing/src/index.ts"],
            "@poker-moons/shared/type": ["libs/shared/type/src/index.ts"],
            "@poker-moons/shared/util": ["libs/shared/util/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
