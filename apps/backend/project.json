{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/backend/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nrwl/node:webpack",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/apps/backend",
                "main": "apps/backend/src/main.ts",
                "tsConfig": "apps/backend/tsconfig.app.json",
                "assets": [
                    "apps/backend/src/assets",
                    {
                        "input": "./",
                        "glob": "apps/backend/.env.sample",
                        "output": "./"
                    }
                ],
                "generatePackageJson": true
            },
            "configurations": {
                "production": {
                    "optimization": true,
                    "extractLicenses": true,
                    "inspect": false,
                    "fileReplacements": [
                        {
                            "replace": "apps/backend/src/environments/environment.ts",
                            "with": "apps/backend/src/environments/environment.prod.ts"
                        }
                    ]
                }
            }
        },
        "serve": {
            "executor": "@nrwl/node:node",
            "options": {
                "buildTarget": "backend:build"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/backend/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/apps/backend"],
            "options": {
                "jestConfig": "apps/backend/jest.config.ts",
                "passWithNoTests": true
            }
        },
        "dockerize": {
            "executor": "./tools/executors/docker:build-and-push",
            "options": {
                "region": "ca-central-1",
                "ecrRegistryUrl": "553501565082.dkr.ecr.ca-central-1.amazonaws.com",
                "platform": "linux/amd64"
            }
        },
        "deploy": {
            "executor": "./tools/executors/aws:eb-deploy",
            "options": {
                "region": "ca-central-1",
                "ebEnvironment": "poker-moons-backend-environment",
                "ebApplication": "poker-moons-backend",
                "ebDeploymentBucket": "elasticbeanstalk-ca-central-1-553501565082",
                "ecrRegistryUrl": "553501565082.dkr.ecr.ca-central-1.amazonaws.com"
            }
        }
    },
    "tags": []
}
